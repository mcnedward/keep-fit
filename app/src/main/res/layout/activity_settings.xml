<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/settings_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Black"/>

    <com.mcnedward.keepfit.view.SettingView
        android:id="@+id/meters_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:setting_title="@string/meters"
        custom:setting_unit="meters"/>

    <com.mcnedward.keepfit.view.SettingView
        android:id="@+id/yards_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:setting_title="@string/yards"
        custom:setting_unit="yards"/>

    <com.mcnedward.keepfit.view.SettingView
        android:id="@+id/miles_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:setting_title="@string/miles"
        custom:setting_unit="miles"/>

    <com.mcnedward.keepfit.view.SettingView
        android:id="@+id/kilommeters_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:setting_title="@string/kilometers"
        custom:setting_unit="kilometers"/>

</LinearLayout>